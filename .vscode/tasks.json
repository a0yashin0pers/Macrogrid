{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and Run Fortran",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p build && /opt/intel/oneapi/compiler/2025.0/bin/ifx $IFX_FLAGS -module build \"${file}\" -o \"build/${fileBasenameNoExtension}\" && \"./build/${fileBasenameNoExtension}\""
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "LD_LIBRARY_PATH": "/opt/intel/oneapi/compiler/2025.0/compiler/lib/intel64_lin:${env:LD_LIBRARY_PATH}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Компиляция и запуск Fortran программы"
        }
    ]
}